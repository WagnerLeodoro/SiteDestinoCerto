@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Destino Certo</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>
        <div class="header-container">
            <nav class="navbar">
                <div class="brand-container">
                    <a href="#" class="nav-logo">
                        <img src="~/img/logoDestinoCerto.svg" alt="Destino Certo Logo" />
                    </a>
                </div>
                <ul class="navbar-nav">
                    <li class="nav-link">
                        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-link">
                        <a asp-area="" asp-controller="Home" asp-action="Vitrine">Pacotes Turisticos</a>
                    </li>
                    <li class="nav-link">
                        <a href="#contato">Contato</a>
                    </li>
                    @if (Context.Session.GetInt32("idUsuario") != null)
                    {
                        <li class="nav-link">
                            <div class="dropdown">
                                <a class="dropbtn" href="#">Gerenciar Pacotes</a>
                                <div class="dropdown-content">
                                    <a asp-area="" asp-controller="Usuario" asp-action="Cadastro">Cadastrar
                                        Usuário</a>
                                    <a asp-area="" asp-controller="Usuario" asp-action="Lista">Listar
                                        Usuários</a>
                                    <a asp-area="" asp-controller="Pacotes" asp-action="CadastroPacote">Cadastrar
                                        Pacotes</a>
                                    <a asp-area="" asp-controller="Pacotes" asp-action="ListaPacote">Listar
                                        Pacotes</a>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            </nav>
            <nav class="user-options">
                @if (Context.Session.GetInt32("idUsuario") != null)
                {
                    <div class="nav-link">
                        <span class="nav-link">Olá @Context.Session.GetString("nomeUsuario")</span>
                    </div>
                    <div>
                        <span><a class="nav-link" asp-area="" asp-controller="Usuario" asp-action="Logout">Sair</a></span>
                    </div>
                }
                else
                {
                    <span><a class="nav-link" asp-controller="Usuario" asp-action="Login">Login</a></span>
                }
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <footer id="contato" class="footer">
        <div class="footerContainer">
            <div class="aboutUs">
                <p>Destino Certo Turismo</p>
                <ul>
                    <li><a href="#">Quem Somos</a></li>
                    <li><a href="#">Como funciona</a></li>
                    <li><a href="#">Onde estamos</a></li>
                </ul>
            </div>
            <div class="ourServices">
                <p>Nossos Serviços</p>
                <ul>
                    <li><a href="#">Hospedagem</a></li>
                    <li><a href="#">Passagens</a></li>
                    <li><a href="#">Transporte</a></li>
                </ul>
            </div>
            <div class="moreInfo">
                <p>Saiba Mais</p>
                <ul>
                    <li><a href="#">Blog</a></li>
                </ul>
                <div class="social-media">
                    <ul>
                        <li><a href="#"><img src="~/img/instagram.png"></a></li>
                        <li><a href="#"><img src="~/img/whatsapp.png"></a></li>
                        <li><a href="#"><img src="~/img/facebook.png"></a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="copyRight">
            &copy; 2022 - Destino Certo Turismo
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)


</body>

</html>
