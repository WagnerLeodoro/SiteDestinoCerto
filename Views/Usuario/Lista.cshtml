@using destinoCerto.Models
@model IEnumerable<Usuario>
@{
    ViewData["Title"] = "Listagem de Usuários";
}
<section id="list">
    <div class="title">
        <h2>Usuários Cadastrados</h2>
    </div>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nome</th>
                    <th>Login</th>
                    <th>Senha</th>
                    <th>Data de Nascimento</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Usuario u in Model)
                {
                    <tr>
                        <td>@u.Id</td>
                        <td>@u.Nome</td>
                        <td>@u.Login</td>
                        <td>@u.Senha</td>
                        <td>@u.DataNascimento.ToString("dd/MM/yyyy")</td>
                        <td>
                            <a href="/Usuario/Editar?id=@u.Id">Editar |</a>
                            <a href="/Usuario/Remover?id=@u.Id">Remover</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>